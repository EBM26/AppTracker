<header>Edit this file</header>

<%= form_for @app do |x| %>
	File Name: <%= x.text_field :file_name %><br>
	Date Created: <%= x.date_field :date_created %><br>
	Location: <%= x.text_field :location %><br>
	Description: <%= x.text_field :description %><br>
	Reference: <%= x.text_field :reference %><br>
    Deployment Info: <%= x.fields_for :deploy do |origin_form| %><br>
    Platform Name: <%= origin_form.text_field :platform_used %><br>
    Deployment Date: <%= origin_form.date_field :deployment_date %><br>
    Deployed App Link: <%= origin_form.text_field :deployed_name %><br>

    <% end %>

    <%= x.submit "Edit File" %><br>

    <% end %>

    <%= link_to "Delete this file", :app, method: :delete, data: {confirm: "Are you sure you want to delete this file information?"} %>
     <%= link_to "Back to App List", apps_path, class: "btn btn-success" %>


