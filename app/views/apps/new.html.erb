<header>Add a New File</header>

<% if @app.errors.any? %>
<%= @app.errors.full_messages %><br>
<% end %>

<%= form_for @app do |x| %>

File Name: <%= x.text_field :file_name %><br>
Date Created: <%= x.date_field :date_created %><br>
Location: <%= x.text_field :location %><br>
Description: <%= x.text_area :description %><br>
Reference: <%= x.text_area :reference %><br>

Deployment Info: <%= x.fields_for :deploy do |origin_form| %><br>
Platform Name: <%= origin_form.text_field :platform_used %><br>
Deployment Date: <%= origin_form.date_field :deployment_date %><br>
Deployed Name: <%= origin_form.text_field :deployed_name %><br>

<% end %>


<%= x.submit "Add File" %>

<% end %>

 <%= link_to "Back to App List", apps_path %>