<body class="addapp-body">

<h1 class="addapph1">Add a New File</h1>

<% if @app.errors.any? %>
<%= @app.errors.full_messages %><br>
<% end %>

<%= form_for @app do |x| %>
<div class="form-group">

	<div class="first-line">
		<%= x.text_field :file_name, class: 'form-control', placeholder: 'file name' %><br>
		<%= x.date_field :date_created, class: 'form-control', placeholder: 'date created' %><br>
		<%= x.text_field :location, class: 'form-control', placeholder: 'file location' %><br>
	</div><br>
	<div class="second-line">
		<%= x.text_area :description, class: 'form-control text_area', placeholder: 'description' %><br>
		<%= x.text_area :reference, class: 'form-control text_area', placeholder: 'reference' %><br>
	</div><br><br>
		
		<%= x.fields_for :deploy do |origin_form| %><br>
			<div class="third-line">
				<h2>Deployment Info: </h2>
				<%= origin_form.text_field :platform_used, class: 'form-control', placeholder: 'platform used to deploy' %>
				<%= origin_form.date_field :deployment_date, class: 'form-control', placeholder: 'date deployed' %>
				<%= origin_form.text_field :deployed_name, class: 'form-control', placeholder: 'deployed app link' %>
			</div>

		<% end %>

 <%= link_to "Back to App List", apps_path %>



<%= x.submit "Add File" %>
</div>
<% end %>


 </body>