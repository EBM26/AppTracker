<body class="show-body">

	<div class="container">
		<div class="row">
			<div class="app-infobox col-sm-6 col-sm-offset-3">

				<h1 class="text-center showh1"><%= @app.file_name %></h1><br>
				<% if @app.date_created %>
				<p class="text-center show-info"><u class="show-label">Date Created:</u> <%= @app.date_created.strftime("%-m-%-d-%Y")%></p>
				<% end %><br>
				<% if @app.location %>
				<p class="text-center show-info"><u class="show-label">Location:</u> <%= @app.location %></p>
				<% end %><br>
				<% if @app.description !="" %>
				<p class="text-center show-info"><u class="show-label">Description:</u> <%= @app.description %></p>
				<% end %><br>
				<% if @app.reference !="" %>
				<p class="text-center show-info"><u class="show-label">Reference:</u> <%= link_to @app.reference, @app.reference  %></p>
				<% end %><br>
				<% if @app.deploy.platform_used !="" %> 
				<p class="text-center show-info"><u class="show-label">Deployment Platform:</u> <%= @app.deploy.platform_used %></p> 
				<% end %><br>
				<% if @app.deploy.deployment_date %>
				<p class="text-center show-info"><u class="show-label">Deployed on:</u> <%= @app.deploy.deployment_date.strftime("%-m-%-d-%Y") %></p> 
				<% end %><br>
				<% if @app.deploy.deployed_name !="" %>
				<p class="text-center show-info"><u class="show-label">App Link:</u> <%= link_to @app.deploy.deployed_name, @app.deploy.deployed_name %></p>
				<% end %><br>

				<div class="buttons-box text-center"><!-- button divs -->
					<%= link_to "Edit this file", edit_app_path, class: "btn btn-primary show-buttons" %>

					<%= link_to "Delete this file", :app, method: :delete, data: {confirm: "Are you sure you want to delete this file information?"}, class: "btn btn-danger show-buttons" %>
					<%= link_to "Back to App List", apps_path, class: "btn btn-success show-buttons" %>
				</div>

			</div><!-- end of show container -->

		</div><!-- end of show row -->
	</div> <!-- end of show grid -->

</body>

